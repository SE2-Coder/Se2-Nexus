---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="SE2 Code Nexus - Architecture for Developers" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        <!-- Google Fonts: Inter (UI) & JetBrains Mono (Code) -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="bg-[#0a0a0a] text-gray-100 min-h-screen font-sans selection:bg-blue-500/30">
        <div class="fixed inset-0 -z-10 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-blue-900/20 via-[#0a0a0a] to-[#0a0a0a]"></div>
        <div class="fixed inset-0 -z-10 bg-[url('/grid.svg')] opacity-20"></div>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--accent: 59, 130, 246;
		--accent-light: 96, 165, 250;
		--accent-dark: 29, 78, 216;
	}
    html {
        font-family: 'Inter', system-ui, sans-serif;
        scroll-behavior: smooth;
    }
    code, pre {
        font-family: 'JetBrains Mono', monospace;
    }
</style>
