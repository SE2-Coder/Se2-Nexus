---
import Layout from '../layouts/Layout.astro';
---

<Layout title="SE2 Nexus | Developer Architecture">
	<main class="relative flex flex-col items-center justify-center min-h-screen px-4 overflow-hidden">
        
        <!-- Hero Content -->
        <div class="z-10 text-center max-w-4xl mx-auto space-y-8">
            
            <!-- Badge -->
            <div class="inline-flex items-center px-3 py-1 rounded-full border border-blue-500/30 bg-blue-500/10 backdrop-blur-sm animate-fade-in-down">
                <span class="w-2 h-2 rounded-full bg-blue-500 animate-pulse mr-2"></span>
                <span class="text-xs font-mono text-blue-300 tracking-wider">SYSTEM ONLINE v2.0</span>
            </div>

            <!-- Main Title -->
            <h1 class="text-6xl md:text-8xl font-bold tracking-tight bg-clip-text text-transparent bg-gradient-to-b from-white via-white to-gray-500">
                SE2 <span class="bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent">NEXUS</span>
            </h1>

            <p class="text-lg md:text-xl text-gray-400 max-w-2xl mx-auto leading-relaxed">
                Arquitectura de alto rendimiento para desarrolladores.
                <br>
                <code class="text-sm bg-gray-800/50 px-2 py-1 rounded mt-2 inline-block text-blue-300 border border-gray-700">Go 1.23 + PostgreSQL + Astro</code>
            </p>

            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mt-8">
                <a href="/login" class="group relative px-8 py-4 bg-blue-600 hover:bg-blue-700 rounded-lg font-medium transition-all duration-300 hover:shadow-[0_0_20px_rgba(37,99,235,0.5)] overflow-hidden">
                    <div class="absolute inset-0 bg-gradient-to-r from-blue-400/0 via-white/20 to-blue-400/0 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700"></div>
                    <span class="flex items-center gap-2">
                        <span>Console Access</span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 group-hover:translate-x-1 transition-transform" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
                    </span>
                </a>
                
                <a href="https://api.se2code.engineer/health" target="_blank" class="px-8 py-4 rounded-lg font-medium border border-gray-700 hover:border-gray-500 hover:bg-gray-800/50 transition-all duration-300 flex items-center gap-2 text-gray-300">
                    <span class="w-2 h-2 rounded-full bg-emerald-500"></span>
                    System Status
                </a>
            </div>
            
            <!-- Terminal Decorator -->
            <div class="mt-16 mx-auto max-w-2xl w-full rounded-xl border border-gray-800 bg-[#0F0F0F] shadow-2xl overflow-hidden backdrop-blur-sm sm:block hidden opacity-80 hover:opacity-100 transition-opacity">
                <div class="flex items-center gap-2 px-4 py-3 border-b border-gray-800 bg-gray-900/50">
                    <div class="w-3 h-3 rounded-full bg-red-500/20 border border-red-500/50"></div>
                    <div class="w-3 h-3 rounded-full bg-yellow-500/20 border border-yellow-500/50"></div>
                    <div class="w-3 h-3 rounded-full bg-emerald-500/20 border border-emerald-500/50"></div>
                    <div class="ml-2 text-xs text-gray-500 font-mono">user@se2-nexus:~</div>
                </div>
                <div class="p-6 text-left font-mono text-sm space-y-2">
                    <div class="flex gap-2">
                        <span class="text-pink-500">❯</span>
                        <span class="text-blue-400">curl</span>
                        <span class="text-gray-300">https://api.se2code.engineer/v1</span>
                    </div>
                    <div class="text-emerald-400">
                        &#123; "status": "online", "latency": "24ms" &#125;
                    </div>
                     <div class="flex gap-2 animate-pulse">
                        <span class="text-pink-500">❯</span>
                        <span class="inline-block w-2 h-4 bg-gray-500"></span>
                    </div>
                </div>
            </div>

        </div>

	</main>
</Layout>

<style>
    /* Custom animations if needed */
    .animate-fade-in-down {
        animation: fadeInDown 0.5s ease-out;
    }
    @keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
